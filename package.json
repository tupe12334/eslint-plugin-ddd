{
  "name": "eslint-plugin-ddd",
  "version": "0.1.1",
  "type": "module",
  "description": "ESLint plugin to enforce Domain-Driven Design principles",
  "main": "src/index.js",
  "files": [
    "src/**/*.js",
    "!src/**/*.spec.js",
    "!src/**/examples/**"
  ],
  "scripts": {
    "test": "vitest run --run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "ci": "pnpm lint && pnpm test",
    "release": "release-it",
    "release:patch": "release-it patch --ci",
    "release:minor": "release-it minor --ci",
    "release:major": "release-it major --ci"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "ddd",
    "domain-driven-design",
    "testing",
    "spec"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitest/ui": "^1.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^9.0.0",
    "eslint-config-agent": "^1.0.0",
    "release-it": "^17.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
